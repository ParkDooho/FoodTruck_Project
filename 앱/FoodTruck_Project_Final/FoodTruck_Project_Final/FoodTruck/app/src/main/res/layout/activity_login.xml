<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="B_Login.LoginActivity"
    android:background="@color/test">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="230dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bus" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@color/bar" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        app:srcCompat="@drawable/food" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="290dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/where" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView5"
        >

        <EditText
            android:id="@+id/userId"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_idpw"
            android:ems="10"
            android:hint="아이디"
            android:paddingLeft="30dp"
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/cursor_color" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/userId"
            android:layout_alignLeft="@+id/userId"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/userPw"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/userId"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_idpw"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textCursorDrawable="@drawable/cursor_color" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/userPw"
            android:layout_alignLeft="@+id/userPw"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/password" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/userPw"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/userId"
            android:background="@drawable/button_login"
            android:text="로그인"
            />

        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="35dp"
            android:layout_alignStart="@+id/userId"
            android:textSize="12dp"
            android:text="@string/register" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/register_text"
            android:layout_alignEnd="@+id/userId"
            android:background="@drawable/button_login"
            android:text="회원가입" />


    </RelativeLayout>

</RelativeLayout>